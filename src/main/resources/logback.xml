<configuration>

  <appender name="FILE" class="ch.qos.logback.core.FileAppender">
    <file>log/neela.log</file>
    <append>true</append>
    <encoder>
      <pattern>%d{HH:mm:ss.SSSSSS} [%thread] %-5level %logger{36} - %msg %n</pattern>
    </encoder>
  </appender>

  <root level="INFO">
    <appender-ref ref="FILE" />
  </root>

</configuration>